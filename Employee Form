
import java.awt.*;
import java.awt.event.*;

public class EmployeeInfoForm {
    public static void main(String[] args) {
        Frame frame = new Frame("Employee Information Form");

        Label nameLabel= new Label("Enter Name:");
        nameLabel.setBounds(50, 50, 100, 30);

        Label idLabel = new Label("Enter Employee ID:");
        idLabel.setBounds(50, 80, 105, 30);

        Label deptLabel = new Label("Enter Department:");
        deptLabel.setBounds(50, 110, 100, 30);

        TextField nameField = new TextField();
        nameField.setBounds(200, 50, 80, 30);

        TextField idField = new TextField();
        idField.setBounds(200, 80, 80, 30);

        TextField deptField = new TextField();
        deptField.setBounds(200, 110, 80, 30);


        Button button = new Button("Submit");
        button.setBounds(150, 240, 80, 30);

        Label outputLabel = new Label();
        outputLabel.setBounds(50, 150, 300, 30);

        Label outputLabel2 = new Label();
        outputLabel2.setBounds(50, 180, 300, 30);


        Label outputLabel3 = new Label();
        outputLabel3.setBounds(50, 210, 300, 30);


        button.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                String empName = nameField.getText();
                String empId = idField.getText();
                String empDept = deptField.getText();
                outputLabel.setText("Employee name: " + empName);
                outputLabel2.setText("Employee ID: " + empId);
                outputLabel3.setText("Employee Department: " + empDept);
            }


        });

        frame.add(nameLabel);
        frame.add(idLabel);
        frame.add(deptLabel);

        frame.add(nameField);
        frame.add(idField);
        frame.add(deptField);

        frame.add(button);
        frame.add(outputLabel);
        frame.add(outputLabel2);
        frame.add(outputLabel3);

        frame.setSize(400, 280);
        frame.setLayout(null);
        frame.setVisible(true);

        frame.addWindowListener(new WindowAdapter() {
            public void windowClosing(WindowEvent e) {
                frame.dispose();
            }
        });
    }

}
